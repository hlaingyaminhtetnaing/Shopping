        <Button
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:text="@string/delivered"
            android:background="@drawable/btn_delivered"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="85dp"
            android:textSize="12sp"
            android:layout_marginStart="20dp"></Button>
        <Button
            android:layout_width="85dp"
            android:layout_height="20dp"
            android:text="@string/grandma_home"
            android:background="@drawable/btn_grandma"
            android:layout_marginLeft="220dp"
            android:textSize="12sp"
            android:layout_marginTop="65dp"
            android:layout_marginStart="220dp"></Button>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_date_19_9_1999"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="120dp"
            android:layout_marginStart="20dp"></TextView>
        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
