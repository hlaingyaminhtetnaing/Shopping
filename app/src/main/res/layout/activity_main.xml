    <androidx.cardview.widget.CardView
        android:id="@+id/cardTwo"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardOne">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:src="@drawable/iphone"
            android:contentDescription="@string/todo"></ImageView>

        <TextView
            style="@style/colorLast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="8dp"
            android:text="@string/iphone_8_plus"
            android:textSize="15sp"
            android:layout_marginStart="130dp"></TextView>


        <TextView
            style="@style/colorLast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="60dp"
            android:text="@string/gold"
            android:textSize="12sp"
            android:layout_marginStart="130dp">

        </TextView>

        <TextView
            style="@style/colorLast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="75dp"
            android:text="@string/qty"
            android:textSize="12sp"
            android:layout_marginStart="130dp"></TextView>

        <TextView
            style="@style/color_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="8dp"
            android:text="@string/_980000_ks"
            android:layout_marginStart="300dp">

        </TextView>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardThree"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardTwo">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:src="@drawable/blender"
            android:contentDescription="@string/todo"></ImageView>

        <TextView
            style="@style/colorLast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="8dp"
            android:text="@string/blender_n41015"
            android:textSize="15sp"
            android:layout_marginStart="130dp"></TextView>

        <TextView
            style="@style/colorLast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="60dp"
            android:text="@string/panasonic"
            android:textSize="12sp"
            android:layout_marginStart="130dp">

        </TextView>

        <TextView
            style="@style/colorLast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="75dp"
            android:text="@string/qty"
            android:textSize="12sp"
            android:layout_marginStart="130dp"></TextView>

        <TextView
            style="@style/color_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="8dp"
            android:text="@string/_999999_ks"
            android:layout_marginStart="300dp">

        </TextView>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardFour"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        app:cardBackgroundColor="#FBD0C2"
        app:cardCornerRadius="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardThree">

        <TextView
            style="@style/colorLast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="@string/bank_information"
            android:textSize="15sp">

        </TextView>

        <TextView
            style="@style/colorLast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/bank_name"
            android:textSize="12sp">

        </TextView>

        <TextView
            style="@style/colorLast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="@string/account_number"
            android:textSize="12sp">

        </TextView>

        <TextView
            style="@style/colorLast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:text="@string/name"
            android:textSize="12sp">

        </TextView>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>