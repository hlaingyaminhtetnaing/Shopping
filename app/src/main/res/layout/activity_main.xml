            android:layout_marginLeft="220dp"
            android:layout_marginStart="220dp"></TextView>
        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="145dp"
            android:text="@string/milionnaya_street_29_flat_10"
            android:layout_marginLeft="220dp"
            android:layout_marginStart="220dp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total_item_4"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="150dp"
            android:layout_marginStart="20dp"></TextView>
        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="@string/delievered_changes"
            android:layout_marginTop="190dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"></TextView>
        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="@string/applied_coupon_code"
            android:layout_marginTop="230dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"></TextView>
        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="@string/discount"
            android:layout_marginTop="270dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"></TextView>
        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="@string/payment_method"
            android:layout_marginTop="320dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/full_Column"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="190dp"
            style="@style/color_red"
            android:layout_marginStart="200dp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/full_Column"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="230dp"
            style="@style/color_red"
            android:layout_marginStart="200dp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/full_Column"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="270dp"
            style="@style/color_red"
            android:layout_marginStart="200dp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/full_Column"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="320dp"
            style="@style/color_red"
            android:layout_marginStart="200dp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_2500_ks"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="190dp"
            style="@style/color_red"
            android:layout_marginStart="220dp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fg_22365893"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="230dp"
            style="@style/color_red"
            android:layout_marginStart="220dp"></TextView>
